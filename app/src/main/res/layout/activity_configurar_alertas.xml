                app:srcCompat="@drawable/radar_original" />

            <ImageView
                android:id="@+id/ivNieve"
                android:layout_width="52dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toStartOf="@+id/switchNieve"
                app:layout_constraintStart_toEndOf="@+id/etNieve"
                app:layout_constraintTop_toBottomOf="@+id/ivRadar"
                app:srcCompat="@drawable/nieve_100" />

            <ImageView
                android:id="@+id/ivTrafico"
                android:layout_width="52dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toStartOf="@+id/switchTrafico"
                app:layout_constraintStart_toEndOf="@+id/etTrafico"
                app:layout_constraintTop_toBottomOf="@+id/ivNieve"
                app:srcCompat="@drawable/desfile_de_coches_original" />

            <ImageView
                android:id="@+id/ivAnimales"
                android:layout_width="52dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toStartOf="@+id/switchAnimales"
                app:layout_constraintStart_toEndOf="@+id/etAnimales"
                app:layout_constraintTop_toBottomOf="@+id/ivTrafico"
                app:srcCompat="@drawable/animales_100" />

            <ImageView
                android:id="@+id/ivLluvia"
                android:layout_width="52dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toStartOf="@+id/switchLluvia"
                app:layout_constraintStart_toEndOf="@+id/etLluvia"
                app:layout_constraintTop_toBottomOf="@+id/ivAnimales"
                app:srcCompat="@drawable/lluvia_100" />

            <ImageView
                android:id="@+id/ivAsfalto"
                android:layout_width="52dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toStartOf="@+id/switchAsfalto"
                app:layout_constraintStart_toEndOf="@+id/etAsfatlo"
                app:layout_constraintTop_toBottomOf="@+id/ivLluvia"
                app:srcCompat="@drawable/bache_100" />

            <Switch
                android:id="@+id/switchObras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/etObras"
                app:layout_constraintEnd_toEndOf="parent" />

            <Switch
                android:id="@+id/switchCalleCortada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/etCalleCortada"
                app:layout_constraintEnd_toEndOf="parent" />

            <Switch
                android:id="@+id/switchRadar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/etRadar"
                app:layout_constraintEnd_toEndOf="parent" />

            <Switch
                android:id="@+id/switchNieve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/etNieve"
                app:layout_constraintEnd_toEndOf="parent" />

            <Switch
                android:id="@+id/switchTrafico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/etTrafico"
                app:layout_constraintEnd_toEndOf="parent" />

            <Switch
                android:id="@+id/switchAnimales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/etAnimales"
                app:layout_constraintEnd_toEndOf="parent" />

            <Switch
                android:id="@+id/switchLluvia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/etLluvia"
                app:layout_constraintEnd_toEndOf="parent" />

            <Switch
                android:id="@+id/switchAsfalto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/etAsfatlo"
                app:layout_constraintEnd_toEndOf="parent" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>


    <Button
        android:id="@+id/button8"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="saveConfiguration"
        android:text="@string/guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</android.support.constraint.ConstraintLayout>